							<div class="w-[8%] pb-5 sm:hidden">
								<Image
									class="max-w-full"
									src={roundframe}
									alt="automated backlog for Squared"
								/>
							</div>
							<h1
								class="text-[24px] xxl:text-[1vw] xl:text-[.9vw] lg:text-[.9vw] md:text-[.9vw] sm:text-[.9vw] text-left uppercase"
