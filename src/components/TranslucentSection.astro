<div
	class="xs:hidden xxs:hidden xxxs:hidden relative font-chivoMono xxxl:mt-[230px] xxl:mt-[230px] xxxl:mb-[600px] xxl:mb-[500px] xl:mb-[280px] lg:mb-[250px] md:mb-[100px] sm:mb-[80px]"
>
	<Image
		src={background}
		alt="background for translucent section in Squared"
		height="690"
		class="drop-shadow-xl invisible"
	/>
	<div class="absolute top-0 w-full h-full flex flex-col z-10 left-0">
		<div class="flex flex-row w-full left-0">
			{/* modal svg */}
			<div
				class="h-full sm:w-full md:w-full md:flex md:justify-items-center w-full mt-[50px] lg:mt-[120px] xl:mt-[140px] xxl:mt-[140px] xxxl:mt-[140px] md:mt-[80px]"
			>
				{
					/* 	<!-- mt-[50px] lg:mt-[120px] md:mt-[80px] md:ml-[40px] sm:ml-[20px] h-[300px] w-[2000px] --> */
				}

				<Image
					class="drop-shadow-lg top-25 absolute w-full"
					src={newIssueModal}
					alt="Create New Issue Pop-Up"
				/>
				{/* black box */}
