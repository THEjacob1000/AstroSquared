---
import translucent from '../images/version2/translucent.png';
import newIssueModal from '../images/new-issue-modal.png'
import parentIssue from '../images/parentIssue.png';
import roundframe from '../images/automatedBacklog.png';
import halfcircle from '../images/customWorkFlow.png';
import stack from '../images/filterViews.png';
import bubble from '../images/discussion.png';
import file from '../images/issueTemplate.png';
import background from '../images/translucentSectionBg.png';
import translucentxs from '../images/translucentxs.svg';
